<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <body>
        <div class="w-full">
            <%- include('partials/header') %>

            <div class="flex justify-center">
                <div class="main-container">
                    <div class="w-full px-6 py-6 border-b">
                        <p class="text-sm font-semibold text-slate-500">Chapter <%= chapter %>.<%= info.episode %> <%= info.title %></p>
                    </div>
                    <div class="float-right w-96 p-4 border m-4 justify-around flex">

                        <button id="speak" class="btn fa fa-play"></button>
                        <button id="stop" class="btn fa fa-stop"></button>
                        <select id="voiceList" class="description" ></select>

                    </div>
                    <div id="reader" class="w-full px-6 py-6">
                        <p class="title py-4">Episode <%= info.episode %>: <%= info.title %></p>
                        
                            <% episode.split(/\r?\n/).forEach(line =>  { %>
                                <p class="description"><%= line %></p>  
                            <%   }); %>
                       
                    </div>  
                    
                    <div class="w-full px-6 py-6 border-t">
                        <div class="flex justify-center">
                            <% if(pagination.prev) { %>
                                <a class="btn" href="<%= pagination.prev %>"><i class="fa fa-chevron-left"></i> Previous</a>
                            <% } else { %>
                                <a class="btn disabled" ><i class="fa fa-chevron-left"></i> Previous</a>
                            <% } %>

                            <a class="btn mr-4 ml-4" href="<%= pagination.home %>" ><i class="fa fa-home"></i> Home</a>

                            <% if(pagination.next) { %>
                                <a class="btn" href="<%= pagination.next %>"> Next <i class="fa fa-chevron-right"></i></a>
                            <% } else { %>
                                <a class="btn disabled"> Next <i class="fa fa-chevron-right"></i></a>
                            <% } %>
                        </div> 
                    </div>

                </div>
            </div>
        </div>
    </body>
    <script  src="/js/speech.js" ></script>
</html>